{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1",
    "^test/(.*)$": "<rootDir>/test/$1"
  },
  "testEnvironment": "node",
  "testMatch": ["**/test/e2e/**/*.e2e.test.ts"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  }
}
